<!-- views/editNews.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <title>Edit News</title>
    </head>
    <body>
        <div class="container mt-5">
            <h2 class="text-center">Edit News</h2>
            <form
                action="/admin/editNews/<%= news._id %>"
                method="post"
                enctype="multipart/form-data"
            >
                <div class="mb-3">
                    <label for="edit-newsTitle" class="form-label"
                        >News Title:</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="edit-newsTitle"
                        name="title"
                        value="<%= news.title %>"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="edit-newsTitleRu" class="form-label"
                        >News Title (Russian):</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="edit-newsTitleRu"
                        name="title_ru"
                        value="<%= news.title_ru %>"
                        required
                    />
                </div>
                <div class="mb-3">
                    <label for="edit-newsDescription" class="form-label"
                        >News Description:</label
                    >
                    <textarea
                        class="form-control"
                        id="edit-newsDescription"
                        name="description"
                        rows="3"
                        required
                    >
<%= news.description %></textarea
                    >
                </div>
                <div class="mb-3">
                    <label for="edit-newsDescriptionRu" class="form-label"
                        >News Description (Russian):</label
                    >
                    <textarea
                        class="form-control"
                        id="edit-newsDescriptionRu"
                        name="description_ru"
                        rows="3"
                        required
                    >
<%= news.description_ru %></textarea
                    >
                </div>
                <div class="mb-3">
                    <label for="edit-newsImage" class="form-label"
                        >News Image (Link):</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="edit-newsImage"
                        name="newsImage"
                        placeholder="Paste updated image link here"
                    />
                </div>
                <button type="submit" class="btn btn-primary">
                    Update News
                </button>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
